@model EmailModel

<div class="Container">


    <form asp-action="SendMail" method="post" class="mt-5">

        <div class="form-group">

            <label>Gönderilecek Mail Adresi</label>
            <input type="text" asp-for="ToEmail" name="ToEmail" class="form-control" />
        </div>

        <div class="form-group">

            <label>Başlık</label>
            <input type="text" asp-for="Subject" name="Subject" class="form-control" />
        </div>


        <div class="form-group">

            <label>Body</label>
            <textarea rows="5" asp-for="Body" class="form-control" name="Body"></textarea>
           
        </div>

        <button type="submit" class="btn btn-success">Mail Gönder</button>

    </form>

    @if (ViewBag.message!=null)
    {
        @ViewBag.message
        
    }


</div>